{
  "name": "@silo/silo-cms",
  "version": "0.0.0",
  "description": "A light-weight file based CMS",
  "main": "index.js",
  "scripts": {
    "build": "run-s build:js build:css",
    "build:css": "node-sass ./client/styles/main.scss ./client/public/main.css",
    "build:js": "echo 'Building js';webpack --config webpack.config.js",
    "init": "./scripts/init.sh",
    "silo:build": "./scripts/build.sh",
    "silo:dev": "./scripts/dev.sh",
    "silo:dev-silo": "./scripts/dev-silo.sh",
    "create-user": "node ./cli/create-user.js",
    "generateSecrets": "bash ./cli/generate-secrets.sh",
    "preinstall": "npm run init; ",
    "prod": "node ./app/app.js",
    "serve": "node ./app/app.js",
    "sync": "source ./config/.env; browser-sync start --port 9200 --proxy 'localhost:'$PORT --files ./client",
    "watch:js": "nodemon --watch ./client/scripts -x 'npm run build:js'",
    "watch:sass": "node-sass -w ./client/styles/main.scss ./client/public/main.css",
    "watch:serve": "nodemon --ignore 'test/*' ./app/app.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/prevuelta/silo.git"
  },
  "keywords": ["cms", "pug", "file"],
  "author": "Pablo Revuelta <hello@pablorevuelta.com>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/prevuelta/silo/issues"
  },
  "homepage": "https://github.com/prevuelta/silo#readme",
  "devDependencies": {
    "@babel/core": "^7.1.6",
    "@babel/plugin-proposal-class-properties": "^7.8.3",
    "@babel/plugin-proposal-object-rest-spread": "^7.8.3",
    "@babel/plugin-transform-runtime": "^7.8.3",
    "@babel/preset-env": "^7.1.6",
    "@babel/preset-react": "^7.0.0",
    "babel-loader": "^8.0.6",
    "browser-sync": "^2.26.7",
    "node-sass": "^4.13.1",
    "webpack": "^4.41.2",
    "webpack-cli": "^3.3.10"
  },
  "babel": {
    "presets": ["@babel/preset-env", "@babel/preset-react"],
    "plugins": [
      "@babel/plugin-proposal-class-properties",
      "@babel/plugin-proposal-object-rest-spread",
      "@babel/plugin-transform-runtime"
    ]
  },
  "dependencies": {
    "@babel/runtime": "^7.8.7",
    "@hapi/joi": "^17.1.0",
